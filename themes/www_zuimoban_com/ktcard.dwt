<script type="text/javascript">
  function submitOk ( obj) {
    var sure = confirm("确定要提交吗");
    if( sure ){
       $("input[name='act']").val("next_ktcard")
       return true;
    }else{
      $("input[name='act']").val("{$act}")
      return false;
    }
  }

   function editnum  ( obj, num) {
      var _this = $(obj).parents('form');
      var _checkbox = $(obj).parents('tr').find("input[name='goods[]']");
      var _num = $(obj).parent().find(".goods_num");
      var _value = parseInt(_num.val());
      if( num > 0 ){
        _num.val( _value+1 );
        _checkbox.prop("checked",true);
         $.post( "ktcard.php?goods_id=" + _checkbox.val(), _this.serialize(), function(data){
              shopResponse(data);
         }, "json");
        //
        if( _value >= num ){
          _num.val( num );
          alert('达到商品最大数量') ;
          return false;
        }
      }else{
        if( _value < 1 ){
          _checkbox.prop("checked",false);
          _num.val( 0 );
        }else{
          _num.val( _value-1 );
          _checkbox.prop("checked",true);
           $.post( "ktcard.php?goods_id=" + _checkbox.val(), _this.serialize(), function(data){
              shopResponse(data);
           }, "json");
        };
      }
    }

    function goodsNumChange( obj, num ) {
      var _this = $(obj).parents('form');
      var _value = parseInt( $(obj).val() );
      var _checkbox = $(obj).parents('tr').find("input[name='goods[]']");
      if( _value > 0 ){
        if( _value > num ){
          alert('达到商品最大数量') ;
          $(obj).val( num );
        }
        _checkbox.prop("checked",true);
        $.post( "ktcard.php?goods_id=" + _checkbox.val(), _this.serialize(), function(data){
          shopResponse(data);
       }, "json");
      }else{
        _checkbox.prop( "checked", false );
      }
    }

    function shopResponse( data ){
      if( data.status ){
          $("#yue").html( data.yue);
          $("#sum").html( data.total);
          $("input[name='sum']").val( data.total);
      }else{
        if( data.goods_id ){
           $("input[name='goods_num["+data.goods_id+"]']").val(data.goods_num)
        }
        alert( data.tips)
         return false;
      }
    }
  </script>
